{
  "name": "@brittonhayes/craigslist-css",
  "version": "1.0.0",
  "description": "A Tailwind CSS theme that captures the iconic Craigslist aesthetic",
  "main": "tailwind.config.js",
  "scripts": {
    "build": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "build:watch": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:minify": "tailwindcss -i ./src/input.css -o ./dist/output.min.css --minify",
    "prepublishOnly": "npm run build && npm run build:minify"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "css",
    "craigslist",
    "theme",
    "retro",
    "nostalgic",
    "y2k"
  ],
  "author": "Britton Hayes <britton@brittonhayes.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brittonhayes/craigslist-css.git"
  },
  "bugs": {
    "url": "https://github.com/brittonhayes/craigslist-css/issues"
  },
  "homepage": "https://brittonhayes.github.io/craigslist-css/",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0"
  },
  "files": [
    "tailwind.config.js",
    "src/input.css",
    "dist/"
  ]
}
